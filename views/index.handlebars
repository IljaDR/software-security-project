<div class="container" style="margin-top: 80px">
<div class="row">

      <div class="col-lg-3">

        <h1 class="my-4">{{title}}</h1>
      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

        <div class="row">
         {{#each antiques}}
          <div class="col-lg-4 col-md-6 mb-4">

            <div class="card h-100">
              <a href="/detail?id={{this.id}}"><img class="card-img-top" src="../pictures/{{this.primary_picture_location}}" style="height: 300px; overflow: hidden; object-fit: cover"></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="/detail?id={{this.id}}">{{this.article_number}}</a>
                </h4>
                <h5>â‚¬{{this.price}}</h5>
                <p class="card-text">{{this.original_description}}</p>
              </div>
            </div>

          </div>
          {{/each}}
        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
</div>
