<div class="container" style="margin-top: 80px">
<div class="row">

      <div class="col-lg-3">

        <h1 class="my-4">{{title}}</h1>
      </div>
      <!-- /.col-lg-3 -->

      <div class="col-lg-9">

        <div class="row">
         {{#each products}}
          <div class="col-lg-4 col-md-6 mb-4">

            <div class="card h-100">
              <a href="#"><img class="card-img-top" src="{{this.picture}}" style="height: 200px"></a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="#">{{this.name}}</a>
                </h4>
                <h5>{{this.price}}</h5>
                <p class="card-text">{{this.description}}</p>
              </div>
            </div>

          </div>
          {{/each}}
        </div>
        <!-- /.row -->

      </div>
      <!-- /.col-lg-9 -->

    </div>
</div>
